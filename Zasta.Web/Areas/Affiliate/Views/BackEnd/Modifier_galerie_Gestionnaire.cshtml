@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
@section admin{}
@section conf{}
    <div id="pcont" class="container-fluid">
            <div class="cl-mcont">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="text-right"><i class="fa fa-edit"></i></div>
                                <h4>Modifier la photo:</h4>
                                <hr />
                                <form  id="wave-form" data-parsley-validate>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label("Titre")
                                            <input type="text" class="form-control" id="titre" value="Salon Lorem" required="">
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Vignette")
                                            <input id="uploadFile" disabled="disabled" class="form-control" required="required" />
                                            <div class="fileUpload btn btn-upload">
                                                <span>Choisissez un fichier</span>
                                                <input id="uploadBtn" type="file" class="upload" multiple="multiple" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Description")
                                            <textarea class="form-control" rows="3" required="required">Quare hoc quidem praeceptum, cuiuscumque est, ad tollendam amicitiam valet; illud potius praecipiendum fuit, ut eam diligentiam adhiberemus in amicitiis comparandis, ut ne quando amare inciperemus eum, quem aliquando odisse possemus. Quin etiam si minus felices in diligendo fuissemus, ferendum id Scipio potius quam inimicitiarum tempus cogitandum putabat.</textarea>
                                        </div>
                                        <div class="ajouter text-right">
                                            <button type="submit" class="btn btn-default text-right">Modifier</button>
                                        </div>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    