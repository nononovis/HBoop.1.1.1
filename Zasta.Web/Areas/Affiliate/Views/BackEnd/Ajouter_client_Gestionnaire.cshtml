@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
@section admin{
    }
    <div id="pcont" class="container-fluid">
            <div class="cl-mcont">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="text-right"><i class="fa fa-plus-square"></i></div>
                                <h4>Ajouter un nouveau client :</h4>
                                <hr />
                                <form id="wave-form" data-parsley-validate >
                                    <div class="form-group">
                                        @Html.Label("Nom")
                                        <input type="text" class="form-control" id="nom" required="required">
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Tél")
                                        <input type="text" class="form-control" id="tel" required="required" parsley-type="phone">
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("E-mail")
                                        <input type="email" class="form-control" id="email" required="required" parsley-type="email">
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("ville")
                                        <input type="number" class="form-control" id="ville" required="required">
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Date")
                                        <div class='input-group date col-md-12' id='datetimepicker1'>
                                           <input type='text' class="form-control" value="@DateTime.Now" required="required" />
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Liste des prestations")
                                        <textarea class="form-control" rows="3"></textarea>
                                    </div>
                                    <div class="ajouter text-right">
                                        <button type="submit" class="btn btn-default text-right">Ajouter</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  