@section admin{
    }

    <div id="pcont" class="container-fluid">
            <div class="cl-mcont">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="text-right"><i class="fa fa-pencil-square-o"></i></div>
                                <h4>Informations sur le salon :</h4>
                                <hr />
                                <form  id="wave-form" data-parsley-validate>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.Label("Nom")
                                            <input type="text" class="form-control" id="nom" value="Lorem" required="required">
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Tél.")
